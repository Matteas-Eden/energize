<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="highScorePane" maxHeight="900.0" maxWidth="1440.0" minHeight="768.0" minWidth="1024.0" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.highScoreController">
    <children>
        <VBox fx:id="highScoreVBox" alignment="CENTER" prefHeight="768.0" prefWidth="1024.0" spacing="25">
            <children>
                <Label fx:id="highScoreTitle" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" text="High Scores" textAlignment="CENTER">
                    <font>
                        <Font name="Cantarell Thin" size="60.0" />
                    </font>
                </Label>
            <TableView maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="340.0">
              <columns>
                <TableColumn prefWidth="170.0" resizable="false" text="C1" />
                <TableColumn minWidth="8.0" prefWidth="170.0" resizable="false" text="C2" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
                <Button fx:id="highScoreButton" alignment="CENTER" mnemonicParsing="false" onAction="#highScoreButtonPressed" prefHeight="40.0" prefWidth="200.0" text="View High Scores" textAlignment="CENTER" />
                <Button fx:id="highScoreBackButton" alignment="CENTER" mnemonicParsing="false" onAction="#highScoreBackButtonPressed" prefHeight="40.0" prefWidth="200.0" text="Back to Main Menu" textAlignment="CENTER" />
            </children></VBox>
    </children>
</AnchorPane>
